using namespace std;
int main() {
    int input;
   vector<int> v;
   
   while (cin >> input)
   v.push_back(input);
    int sum = 0; int p=1;
    for(int i=0;i<v.size();i++){
        
        if(p==v.size())
        cout<<"P"<<p<<" "<<"(WT="<<sum<<")"<<" ";
        else
            cout<<"P"<<p<<" "<<"(WT="<<sum<<"), ";
        sum = sum+v[i];
        p++;
    }
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    return 0;
}
